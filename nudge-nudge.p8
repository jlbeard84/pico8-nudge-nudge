pico-8 cartridge // http://www.pico-8.com
version 15
__lua__
--game
level=1
gridsquare=8

--player
playerx=0
playery=0

function moveplayer()
 if btnp(0) then
 	playerx-=gridsquare
 elseif btnp(1) then
 	playerx+=gridsquare
 elseif btnp(2) then
  playery-=gridsquare
 elseif btnp(3) then
  playery+=gridsquare
 end
 
 if playerx < 0 then
 	playerx=0
 	sfx(0)
 elseif playerx > 127 then
 	playerx=120
 	sfx(0)
 elseif playery < 0 then
 	playery=0
 	sfx(0)
 elseif playery > 119 then
 	playery=112
 	sfx(0)
 end 
end

function _update()
	moveplayer()
end

function drawhud()
	rectfill(0,120,127,127,0)
	rect(0,120,127,128,7)
	print("level "..level,2,122,7)
end

function _draw()
	rectfill(0,0,127,119,3)
	--player
	spr(001,playerx,playery)
	drawhud()
end

